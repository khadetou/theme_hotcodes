<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- HotCodes Footer Template -->
    <template id="hotcodes_footer" inherit_id="website.layout" name="HotCodes Footer">
        <xpath expr="//footer" position="replace">
            <footer t-if="not no_footer" class="hotcodes-footer" id="footer" style="background: linear-gradient(180deg, var(--bg-darker) 0%, #000000 100%); position: relative; z-index: 1;">
                <div class="container py-5">
                    <div class="row g-4 py-4">
                        <!-- Colonne 1: HotCodes Brand -->
                        <div class="col-lg-3 col-md-6">
                            <div class="footer-brand mb-3">

                                <a href="/" class="o_footer_logo logo">
                                    <img src="/theme_hotcodes/static/src/img/logo.svg" class="img-fluid d-block me-auto" aria-label="Logo of MyCompany" title="MyCompany" role="img" style="width: 50% !important;"/>
                                </a>

                                <p style="color: rgba(255,255,255,0.7); line-height: 1.6; margin-bottom: 1.5rem; font-size: 0.95rem;">
                                    Votre partenaire de confiance pour la transformation digitale au
                                    Sénégal.
                                </p>
                            </div>
                            <div class="footer-social">
                                <p style="color: rgba(255,255,255,0.7); font-size: 0.875rem; margin-bottom: 0.75rem;">
                                    Suivez-nous:
                                </p>
                                <div class="social-links d-flex gap-3">
                                    <a href="https://linkedin.com/company/hotcodes" target="_blank" rel="noopener" style="color: var(--hotcodes-primary); font-size: 1.5rem; transition: all 0.2s ease;" title="LinkedIn">
                                        <iconify-icon icon="ph:linkedin-logo-duotone"></iconify-icon>
                                    </a>
                                    <a href="https://facebook.com/hotcodes" target="_blank" rel="noopener" style="color: var(--hotcodes-primary); font-size: 1.5rem; transition: all 0.2s ease;" title="Facebook">
                                        <iconify-icon icon="ph:facebook-logo-duotone"></iconify-icon>
                                    </a>
                                    <a href="https://twitter.com/hotcodes" target="_blank" rel="noopener" style="color: var(--hotcodes-primary); font-size: 1.5rem; transition: all 0.2s ease;" title="Twitter">
                                        <iconify-icon icon="ph:twitter-logo-duotone"></iconify-icon>
                                    </a>
                                    <a href="https://wa.me/221775867968" target="_blank" rel="noopener" style="color: var(--hotcodes-primary); font-size: 1.5rem; transition: all 0.2s ease;" title="WhatsApp">
                                        <iconify-icon icon="ph:whatsapp-logo-duotone"></iconify-icon>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Colonne 2: Produits -->
                        <div class="col-lg-2 col-md-6">
                            <h4 style="color: white; font-weight: 500; font-size: 1rem; margin-bottom: 1rem;">
                                Produits
                            </h4>
                            <ul style="list-style: none; padding: 0; margin: 0;">
                                <li style="margin-bottom: 0.75rem;">
                                    <a href="/produits/saytu" style="color: rgba(255,255,255,0.7); text-decoration: none; transition: color 0.2s; font-size: 0.95rem;">
                                        Saytu ERP
                                    </a>
                                </li>
                                <li style="margin-bottom: 0.75rem;">
                                    <a href="/produits/enterprise" style="color: rgba(255,255,255,0.7); text-decoration: none; transition: color 0.2s; font-size: 0.95rem;">
