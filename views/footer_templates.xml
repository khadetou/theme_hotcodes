                                <li style="margin-bottom: 0.75rem;">
                                    <a href="mailto:contact@hotcodes.sn" style="color: rgba(255,255,255,0.7); text-decoration: none; transition: color 0.2s; font-size: 0.95rem;">
                                        <iconify-icon icon="solar:letter-bold-duotone" style="color: var(--hotcodes-primary); margin-right: 0.5rem; font-size: 1.2em; vertical-align: middle;"></iconify-icon>
