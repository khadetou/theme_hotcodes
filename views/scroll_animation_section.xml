                            <div class="visual-card">
                                <div class="visual-gradient gradient-4"></div>
                                <div class="visual-elements" style="position: relative; display: flex; align-items: center; justify-content: center; height: 100%;">
                                    <!-- Central Icon -->
                                    <iconify-icon icon="solar:headphones-round-sound-bold-duotone" style="font-size: 8rem; color: var(--hotcodes-accent); opacity: 0.9;"></iconify-icon>

                                    <!-- Corner Icons -->
