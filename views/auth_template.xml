                                                <iconify-icon icon="solar:login-3-bold-duotone"></iconify-icon> Vous avez d√©j√† un compte ?
                                            </a>
                                        </div>

                                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                                        <input type="hidden" name="token" t-att-value="token"/>

                                        <!-- OAuth -->
                                        <t t-call="web.login_oauth"/>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </xpath>
    </template>

    <!-- Hotcodes Reset Password Page -->
    <template id="hotcodes_reset_password" name="Hotcodes Reset Password" inherit_id="auth_signup.reset_password">
        <!-- Add welcome text above the form -->
        <xpath expr="//div[@id='oe_structure_reset_password_top']" position="after">
            <div class="text-center mb-4">
                <!-- Badge -->
                <div class="mb-3">
                    <span style="display: inline-block; background: rgba(59,130,246,0.15); border: 1px solid rgba(59,130,246,0.3); color: #3b82f6; padding: 0.5rem 1.25rem; border-radius: 20px; font-size: 0.875rem; font-weight: 600; letter-spacing: 0.5px;">
                        üîë RESET PASSWORD
                    </span>
                </div>
                <!-- Title -->
                <h2 style="font-weight: 700; font-size: 2rem; margin-bottom: 0.75rem; color: white; line-height: 1.2;">
                    Reset Your <span style="background: linear-gradient(135deg, #3b82f6, #ff6b35); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Password</span>
                </h2>
